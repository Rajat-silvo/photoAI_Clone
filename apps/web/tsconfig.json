{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    //"typeRoots": ["./node_modules/@types/*"], //added this
    //for monorepo like turborepo, add these 2 lines
    "typeRoots": ["../../node_modules/@types"],
    "types": ["node"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "forceConsistentCasingInFileNames": true, //added this
    //add baseUrl and paths as import alias for shadcn/ui
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
